@model Coolio.Models.DetailsViewModel
@{
    ViewBag.Title = Model.Song.Name;
}
<h2>Song - @Model.Song.Name</h2>
<table class="table">
    <tr>
        <th>ID</th>
        <th>Rating</th>
        <th>Producer</th>
        <th>Lifetime</th>
    </tr>
    <tr>
        <td>@Model.Song.Id</td>
        <td>@Model.Song.Rating</td>
        <td>@Model.Select.Producers.FirstOrDefault(x => x.Selected).Text</td>
        <td>@Model.Song.Lifetime</td>
    </tr>
    <tr>
        <td><a asp-controller="Home" asp-action="Edit" asp-route-id="@Model.Song.Id" class="btn btn-primary" role="button">Edit</a></td>
        <td><a asp-controller="Home" asp-action="Delete" asp-route-id="@Model.Song.Id" class="btn btn-primary" role="button">Delete</a></td>
    </tr>
</table>
