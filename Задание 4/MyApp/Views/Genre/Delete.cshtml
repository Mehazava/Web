@model MyApp.ViewModels.GenreModel;
@{
    ViewData["Title"] = "Delete genre";
}

<div>
    <h3>Are you sure you want to delete this genre?</h3>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@ViewBag.Genre.Id</td>
                <td>@ViewBag.Genre.Name</td>
            </tr>
        </tbody>
    </table>
    <table>
        <tr>
            <td>
                <form method="post">
                    <input type="submit" value="Delete" />
                </form>
            </td>
            <td>
                <form action="~/Genre/List">
                    <input type="submit" value="Cancel" />
                </form>
            </td>
        </tr>
    </table>
</div>
