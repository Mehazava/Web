@model IEnumerable<MobileStoreWow.Models.Phone>
@{
    ViewData["Title"] = "Goods catalogue";
}

<!DOCTYPE html>

<html>
<head>
    <title>Smartphone shop</title>
</head>
<body>
    <h3>Smartphones</h3>
    <table class="table-condensed">
        <tr>
            <td>Model</td>
            <td>Manufacturer</td>
            <td>Price</td>
            <td></td>
        </tr>
        @foreach (var phone in Model)
        {
            <tr>
                <td>@phone.Name</td>
                <td>@phone.Company</td>
                <td>@phone.Price</td>
                <td><a href="~/Home/Buy/@phone.Id">Buy</a></td>
            </tr>
        }
    </table>
</body>
</html>
